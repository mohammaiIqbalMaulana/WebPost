<h1 class="mb-4">
    <i class="bi bi-pencil-square me-2"></i> <%= title %>
</h1>

<div class="alert alert-info alert-dismissible fade show">
    <i class="bi bi-clock me-2"></i>
    <strong>Informasi:</strong> 
    Kolom Like, Komentar, View, Share, dan Save dapat diisi dengan angka (termasuk 0) atau dibiarkan kosong. 
    Data yang sudah diisi akan tersimpan sementara saat pindah halaman.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>

<!-- Follower Info Section -->
<div class="card mb-3" id="followerInfoCard">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <i class="bi bi-people-fill text-primary me-2 fs-5"></i>
            <div class="flex-grow-1">
                <div id="followerInfoText" class="fw-semibold text-muted">
                    <span class="spinner-border spinner-border-sm me-2"></span>Memuat info follower...
                </div>
            </div>
            <button type="button" class="btn btn-outline-primary btn-sm" onclick="openFollowerModal()">
                <i class="bi bi-pencil-square me-1"></i> Update
            </button>
        </div>
    </div>
</div>

<div class="d-flex gap-2 mb-3">
    <a href="/reports" class="btn btn-secondary" onclick="clearDraftOnExit()">
        <i class="bi bi-arrow-left me-1"></i>
    </a>
</div>

<form method="POST" action="/reports/update" onsubmit="return validateForm()" id="updateForm">
    <div class="table-responsive">
        <table class="table table-hover align-middle table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th width="10">No</th>
                    <th width="60">Judul</th>
                    <th width="10">URL</th>
                    <th width="10">
                        <i class="bi bi-heart-fill text-danger me-1"></i>
                        Like
                    </th>
                    <th width="10">
                        <i class="bi bi-chat-dots-fill text-info me-1"></i>
                        Komentar
                    </th>
                    <th width="10">
                        <i class="bi bi-eye-fill text-success me-1"></i>
                        View
                    </th>
                    <th width="10">
                        <i class="bi bi-share-fill text-primary me-1"></i>
                        Share
                    </th>
                    <th width="10">
                        <i class="bi bi-bookmark-fill text-secondary me-1"></i>
                        Save
                    </th>
                </tr>
            </thead>
            <tbody>
                <% if (reports.length > 0) { %>
                    <% reports.forEach((report, index) => { %>
                        <tr>
                            <td class="text-center fw-bold"><%= index + 1 %></td>
                            <td>
                                <div class="d-flex flex-column">
                                    <strong style="max-width: 520px; overflow-wrap:anywhere;" title="<%= report.judul %>"><%= report.judul %></strong>
                                </div>
                                <input type="hidden" name="ids[]" value="<%= report.id %>">
                            </td>
                            <td class="text-center">
                                <a href="<%= report.post_url %>" 
                                   target="_blank" 
                                   class="btn btn-sm btn-outline-info"
                                   title="Buka link posting">
                                    <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                            </td>
                            <td>
                                <input type="number" 
                                       name="like_count[]" 
                                       class="form-control form-control-sm text-center" 
                                       min="0"
                                       required
                                       value="<%= report.like_count || 0 %>"
                                       data-field="like"
                                       title="Masukkan jumlah like terbaru">
                            </td>
                            <td>
                                <input type="number" 
                                       name="comment_count[]" 
                                       class="form-control form-control-sm text-center"
                                       min="0"
                                       required
                                       value="<%= report.comment_count || 0 %>"
                                       data-field="comment"
                                       title="Masukkan jumlah komentar terbaru">
                            </td>
                            <td>
                                <input type="number" 
                                       name="view_count[]" 
                                       class="form-control form-control-sm text-center" 
                                       min="0"
                                       required
                                       value="<%= report.view_count || 0 %>"
                                       data-field="view"
                                       title="Masukkan jumlah view terbaru">
                            </td>
                            <td>
                                <input type="number" 
                                       name="share_count[]" 
                                       class="form-control form-control-sm text-center"
                                       min="0"
                                       required
                                       value="<%= report.share_count || 0 %>"
                                       data-field="share"
                                       title="Masukkan jumlah share terbaru">
                            </td>
                            <td>
                                <input type="number" 
                                       name="save_count[]" 
                                       class="form-control form-control-sm text-center" 
                                       min="0"
                                       required 
                                       value="<%= report.save_count || 0 %>"
                                       data-field="save"
                                       title="Masukkan jumlah save terbaru">
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">
                            <i class="bi bi-calendar-x-fill fs-2 mb-2"></i>
                            <div>Tidak ada laporan dalam 30 hari terakhir untuk diupdate</div>
                            <a href="/reports/add" class="btn btn-primary btn-sm mt-2">
                                <i class="bi bi-plus me-1"></i> Tambah Laporan Baru
                            </a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <% if (reports.length > 0) { %>
        <div class="d-flex justify-content-end align-items-center gap-2 mt-3">
            <a href="/reports" class="btn btn-secondary" onclick="clearDraftOnExit()">
                <i class="bi bi-arrow-left me-1"></i> Batal
            </a>
            <button type="submit" class="btn btn-success" id="submitBtn">
                <i class="bi bi-save me-1"></i> Simpan Perubahan
            </button>
        </div>
    <% } %>
</form>

<script>
// Load follower info on page load
async function loadFollowerInfo() {
    try {
        const response = await fetch('/reports/get-follower-info/tiktok');
        const data = await response.json();
        
        const infoElement = document.getElementById('followerInfoText');
        
        if (data.success && data.hasData) {
            infoElement.innerHTML = `
                <span class="text-dark">Follower ${data.platform}:</span> 
                <span class="fw-bold text-primary">${data.follower_count_formatted}</span> 
                <span class="text-muted">(Update: ${data.update_date} untuk periode ${data.period})</span>
            `;
            infoElement.className = 'fw-semibold';
        } else {
            infoElement.innerHTML = `
                <span class="text-warning">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Belum ada data follower - Klik tombol Update untuk menambahkan
                </span>
            `;
        }
    } catch (error) {
        console.error('Error loading follower info:', error);
        document.getElementById('followerInfoText').innerHTML = `
            <span class="text-danger">
                <i class="bi bi-x-circle me-1"></i>
                Gagal memuat info follower
            </span>
        `;
    }
}

async function openFollowerModal() {
    let currentData = null;
    
    try {
        const response = await fetch('/reports/get-follower-info/tiktok');
        const data = await response.json();
        if (data.success && data.hasData) {
            currentData = data;
        }
    } catch (error) {
        console.error('Error fetching current follower data:', error);
    }

    // Default ke bulan ini
    const today = new Date();
    const defaultDate = today.getFullYear() + '-' + String(today.getMonth() + 1).padStart(2, '0') + '-01';
    
    const currentInfo = currentData ? `
        <div class="alert alert-info mb-3">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Data Saat Ini:</strong> ${currentData.follower_count_formatted} followers untuk periode ${currentData.period}
        </div>
    ` : `
        <div class="alert alert-warning mb-3">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Belum ada data follower</strong>
        </div>
    `;

    const html = `
        <div class="text-start">
            ${currentInfo}
            <div class="mb-3">
                <label class="form-label">Platform</label>
                <select id="f_platform" class="form-select" disabled>
                    <option value="tiktok">TikTok</option>
                </select>
                <div class="form-text">Saat ini hanya mendukung TikTok</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Jumlah Followers</label>
                <input type="number" id="f_count" class="form-control" min="0" 
                       placeholder="Masukkan jumlah follower"
                       value="${currentData ? currentData.follower_count : ''}">
            </div>
            <div class="mb-3">
                <label class="form-label">Periode Bulan</label>
                <input type="date" id="f_date" class="form-control" 
                       value="${currentData ? currentData.recorded_date : defaultDate}">
                <div class="form-text">Pilih tanggal untuk mewakili periode bulan data follower ini</div>
            </div>
        </div>`;

    Swal.fire({
        title: '<i class="bi bi-people-fill me-2"></i>Update Data Follower',
        html,
        width: '500px',
        showCancelButton: true,
        confirmButtonText: '<i class="bi bi-save me-1"></i> Simpan',
        cancelButtonText: 'Batal',
        confirmButtonColor: '#0d6efd',
        preConfirm: () => {
            const platform = document.getElementById('f_platform').value;
            const count = document.getElementById('f_count').value;
            const date = document.getElementById('f_date').value;
            
            if (!count || count === '' || Number(count) < 0) {
                Swal.showValidationMessage('Jumlah follower harus diisi dan >= 0');
                return false;
            }
            
            if (!date) {
                Swal.showValidationMessage('Periode bulan harus dipilih');
                return false;
            }
            
            return { platform, count: Number(count), recorded_date: date };
        }
    }).then((result) => {
        if (result.isConfirmed) {
            // Show loading
            Swal.fire({
                title: 'Menyimpan...',
                html: 'Sedang memproses data follower',
                allowOutsideClick: false,
                showConfirmButton: false,
                willOpen: () => {
                    Swal.showLoading();
                }
            });

fetch('/reports/update-follower', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
        platform: result.value.platform,
        follower_count: result.value.count,
        recorded_date: result.value.recorded_date
    })
})
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Berhasil!',
                        html: `
                            <div class="text-start">
                                <p><strong>Data follower telah ${data.data.action === 'created' ? 'disimpan' : 'diperbarui'}</strong></p>
                                <hr>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Platform: ${data.data.platform}</li>
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Followers: ${data.data.follower_count}</li>
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Periode: ${data.data.period}</li>
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Update: ${data.data.update_date}</li>
                                </ul>
                            </div>
                        `,
                        showConfirmButton: true,
                        confirmButtonText: 'OK'
                    }).then(() => {
                        // Reload follower info
                        loadFollowerInfo();
                    });
                } else {
                    Swal.fire({ 
                        icon: 'error', 
                        title: 'Gagal!', 
                        text: data.message || 'Gagal menyimpan data follower' 
                    });
                }
            })
            .catch((error) => {
                console.error('Error:', error);
                Swal.fire({ 
                    icon: 'error', 
                    title: 'Error!', 
                    text: 'Terjadi kesalahan jaringan' 
                });
            });
        }
    });
}

function validateForm() {
    const inputs = document.querySelectorAll('input[type="number"]');
    let validReports = 0;
    let totalReports = 0;
    
    const reportInputs = document.querySelectorAll('input[type="number"]');
    const totalReportsCount = reportInputs.length / 5;
    
    for (let i = 0; i < totalReportsCount; i++) {
        const reportFields = {
            like: reportInputs[i * 5],
            comment: reportInputs[i * 5 + 1],
            view: reportInputs[i * 5 + 2],
            share: reportInputs[i * 5 + 3],
            save: reportInputs[i * 5 + 4]
        };
        
        const allFieldsFilled = Object.values(reportFields).every(field => 
            field.value !== '' && field.value !== null && field.value !== undefined && parseInt(field.value) >= 0
        );

        if (allFieldsFilled) {
            validReports++;
            totalReports++;
        } else {
            totalReports++;
        }
    }
    
    if (totalReports === 0) {
        Swal.fire({
            title: 'Tidak Ada Data',
            text: 'Silakan isi minimal satu laporan dengan data yang valid',
            icon: 'warning'
        });
        return false;
    }
    
    if (validReports !== totalReports) {
        Swal.fire({
            title: 'Field Kosong',
            text: 'Ada laporan yang memiliki field kosong. Silakan isi semua field untuk laporan yang ingin diupdate.',
            icon: 'warning'
        });
        return false;
    }
    
    Swal.fire({
        title: 'Konfirmasi Update',
        html: `
            <div class="text-start">
                <p><strong>${validReports}</strong> laporan akan diupdate</p>
                <p class="text-muted">Apakah Anda yakin ingin melanjutkan?</p>
            </div>
        `,
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#198754',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Ya, Update!',
        cancelButtonText: 'Batal'
    }).then((result) => {
        if (result.isConfirmed) {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Menyimpan...';
            submitBtn.disabled = true;
            document.getElementById('updateForm').submit();
        }
    });
    
    return false;
}


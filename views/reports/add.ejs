<h1 class="mb-4">
  <i class="bi bi-plus-circle me-2"></i> <%= title %>
</h1>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <form method="POST" action="/reports/add" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="platform" class="form-label">Platform:</label>
            <select name="platform" id="platform" class="form-select" required>
              <option value="tiktok">TikTok</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="judul" class="form-label">Judul:</label>
            <input type="text" name="judul" id="judul" class="form-control" required>
          </div>

          <div class="mb-3">
            <label for="post_url" class="form-label">URL:</label>
            <input type="url" name="post_url" id="post_url" class="form-control" required>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="like_count" class="form-label">
                <i class="bi bi-heart-fill text-danger me-1"></i> Like:
              </label>
              <input type="number" name="like_count" id="like_count" class="form-control" min="0">
            </div>

            <div class="col-md-6 mb-3">
              <label for="comment_count" class="form-label">
                <i class="bi bi-chat-dots-fill text-info me-1"></i> Comment:
              </label>
              <input type="number" name="comment_count" id="comment_count" class="form-control" min="0">
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="view_count" class="form-label">
                <i class="bi bi-eye-fill text-success me-1"></i> View:
              </label>
              <input type="number" name="view_count" id="view_count" class="form-control" min="0">
            </div>

            <div class="col-md-6 mb-3">
              <label for="share_count" class="form-label">
                <i class="bi bi-share-fill text-primary me-1"></i> Share:
              </label>
              <input type="number" name="share_count" id="share_count" class="form-control" min="0">
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="save_count" class="form-label">
                <i class="bi bi-bookmark-fill text-secondary me-1"></i> Save:
              </label>
              <input type="number" name="save_count" id="save_count" class="form-control" min="0">
            </div>

            <div class="col-md-6 mb-3">
              <label for="follower_count" class="form-label">
                <i class="bi bi-people-fill text-warning me-1"></i> Follower:
              </label>
              <input type="number" name="follower_count" id="follower_count" class="form-control" min="0">
            </div>
          </div>

          <div class="mb-3">
            <label for="post_date" class="form-label">Tanggal Postingan:</label>
            <input type="date" name="post_date" id="post_date" class="form-control" required>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Gambar Postingan:</label>
            <input type="file" name="image" id="image" class="form-control" accept="image/*">
            <div class="form-text">Format yang didukung: JPG, PNG, GIF. Maksimal 5MB</div>
          </div>

          <div class="d-flex justify-content-between">
            <a href="/reports" class="btn btn-secondary">
              <i class="bi bi-arrow-left me-1"></i> Kembali
            </a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-save me-1"></i> Simpan
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
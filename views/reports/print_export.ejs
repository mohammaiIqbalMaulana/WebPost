<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print {
            .no-print { display: none !important; }
            a[href]:after { content: "" !important; }
            body { font-size: 12px; }
            .table { font-size: 11px; }
            .card { break-inside: avoid; }
            h3, h4, h5 { page-break-after: avoid; }
            .thumb { max-width: 80px; max-height: 80px; }
            .alert { background: #f8f9fa !important; border: 1px solid #dee2e6 !important; }
            
            /* Page break rules for better PDF layout */
            .page-break-before { page-break-before: always; }
            .page-break-after { page-break-after: always; }
            .page-break-inside-avoid { page-break-inside: avoid; }
            
            /* Summary section always on new page */
            .summary-section { page-break-before: always; }
            
            /* Monthly table sections - each month on new page */
            .monthly-table-section { page-break-before: always; }
            .monthly-table-section:first-child { page-break-before: auto; }
            
            /* Normal mode - table immediately after title */
            .normal-table-section { page-break-after: avoid; }
            
            /* Chart specific print styles */
            .chart-container {
                break-inside: avoid;
                page-break-inside: avoid;
                margin-bottom: 1rem;
            }
            
            canvas {
                max-width: 100% !important;
                height: auto !important;
                background: white !important;
            }
            
            .card {
                border: 1px solid #dee2e6 !important;
                box-shadow: none !important;
            }
            
            .card-header {
                background-color: #f8f9fa !important;
                color: #212529 !important;
                border-bottom: 1px solid #dee2e6 !important;
                print-color-adjust: exact;
            }
            
            /* Force chart colors in print */
            .chart-container * {
                print-color-adjust: exact;
                -webkit-print-color-adjust: exact;
            }
        }
        @media screen {
            .thumb {
                max-width: 120px; max-height: 120px; object-fit: cover;
            }
            
            .chart-container {
                min-height: 300px;
            }
            
            .card-header.bg-primary,
            .card-header.bg-info,
            .card-header.bg-secondary {
                print-color-adjust: exact;
                -webkit-print-color-adjust: exact;
            }
        }
        
        .comparison-card {
            transition: transform 0.2s;
        }
        .comparison-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .metric-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
        .summary-card {
            border-left: 4px solid #007bff;
        }
        .table th {
            background-color: #f8f9fa !important;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }
        .table td {
            vertical-align: middle;
        }
        .progress {
            height: 6px;
            background-color: #e9ecef;
        }
        .progress-bar {
            transition: width 0.8s ease-in-out;
        }
        .card-header {
            font-weight: 600;
        }
        .text-success { color: #198754 !important; }
        .text-danger { color: #dc3545 !important; }
        .bg-success { background-color: #198754 !important; }
        .bg-danger { background-color: #dc3545 !important; }
        .month-card {
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }
        .month-card:hover {
            border-color: #007bff;
            box-shadow: 0 4px 12px rgba(0,123,255,0.15);
        }
        .month-card.has-data {
            border-color: #28a745;
            background: linear-gradient(135deg, #f8fff8 0%, #e8f5e8 100%);
        }
        .month-card.no-data {
            border-color: #ffc107;
            background: linear-gradient(135deg, #fffdf5 0%, #fff3cd 100%);
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        window.addEventListener('load', () => {
            // Fungsi untuk mengatur bar progress
            const setProgressBar = (progressBar, percentage, actualChange) => {
                if (!progressBar) return;
                
                // Reset classes
                progressBar.classList.remove('bg-success', 'bg-danger', 'bg-warning');
                
                if (actualChange === 0) {
                    // Jika tidak ada perubahan (0)
                    progressBar.style.width = '100%';
                    progressBar.classList.add('bg-warning');
                } else if (actualChange < 0) {
                    // Jika negatif (penurunan)
                    progressBar.style.width = '100%';
                    progressBar.classList.add('bg-danger');
                } else {
                    // Jika positif (kenaikan)
                    progressBar.style.width = percentage + '%';
                    progressBar.classList.add('bg-success');
                }
            };

            // Animasi untuk progress bar followers
            const followerBars = document.querySelectorAll('.progress-bar[data-follower-progress]');
            followerBars.forEach(bar => {
                const progress = parseFloat(bar.getAttribute('data-follower-progress'));
                const change = parseFloat(bar.getAttribute('data-change') || '0');
                setTimeout(() => setProgressBar(bar, Math.abs(progress), change), 100);
            });

            // Animasi untuk progress bar insight metrics
            const metricBars = document.querySelectorAll('.progress-bar[data-metric-progress]');
            metricBars.forEach(bar => {
                const progress = parseFloat(bar.getAttribute('data-metric-progress'));
                const change = parseFloat(bar.getAttribute('data-change') || '0');
                setTimeout(() => setProgressBar(bar, Math.abs(progress), change), 100);
            });
        });
    </script>
</head>

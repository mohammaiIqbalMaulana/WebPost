    document.addEventListener('DOMContentLoaded', function() {
        // Chart configuration untuk PDF/Print friendly
        Chart.defaults.font.size = 11;
        Chart.defaults.responsive = true;
        Chart.defaults.maintainAspectRatio = false;
        
        const printMode = window.matchMedia('print');
        
        // Main Metrics Chart
        const chartData = JSON.parse('<%- chartData || "null" %>');
        if (chartData && document.getElementById('metricsChart')) {
            const ctx = document.getElementById('metricsChart').getContext('2d');
            
            const config = {
                type: 'line',
                data: chartData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                boxWidth: 12,
                                padding: 15,
                                font: { size: 10 }
                            }
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            titleFont: { size: 11 },
                            bodyFont: { size: 10 }
                        }
                    },
                    scales: {
                        x: {
                            display: true,
                            grid: { display: false },
                            ticks: { 
                                font: { size: 9 },
                                maxRotation: 45
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            grid: { color: '#e9ecef' },
                            ticks: { 
                                font: { size: 9 },
                                callback: function(value) {
                                    return value >= 1000 ? (value/1000).toFixed(1) + 'k' : value;
                                }
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            grid: { drawOnChartArea: false },
                            ticks: { 
                                font: { size: 9 },
                                callback: function(value) {
                                    return value.toFixed(1) + '%';
                                }
                            }
                        }
                    },
                    elements: {
                        point: { radius: 3, hoverRadius: 5 },
                        line: { borderWidth: 2 }
                    },
                    // Print-specific settings
                    animation: {
                        onComplete: function() {
                            if (printMode.matches) {
                                this.options.animation = false;
                            }
                        }
                    }
                }
            };
            
            new Chart(ctx, config);
        }
    });
    </script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print {
            .no-print { display: none !important; }
            a[href]:after { content: "" !important; }
            body { font-size: 12px; }
            .table { font-size: 11px; }
            .card { break-inside: avoid; }
            h3, h4, h5 { page-break-after: avoid; }
            .thumb { max-width: 80px; max-height: 80px; }
            .alert { background: #f8f9fa !important; border: 1px solid #dee2e6 !important; }
        }
        @media screen {
            .thumb {
                max-width: 120px; max-height: 120px; object-fit: cover;
            }
        }
        .comparison-card {
            transition: transform 0.2s;
        }
        .comparison-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .metric-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
        .summary-card {
            border-left: 4px solid #007bff;
        }
        .table th {
            background-color: #f8f9fa !important;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }
        .table td {
            vertical-align: middle;
        }
        .progress {
            height: 6px;
        }
        .card-header {
            font-weight: 600;
        }
        .text-success { color: #198754 !important; }
        .text-danger { color: #dc3545 !important; }
        .bg-success { background-color: #198754 !important; }
        .bg-danger { background-color: #dc3545 !important; }
        .month-card {
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }
        .month-card:hover {
            border-color: #007bff;
            box-shadow: 0 4px 12px rgba(0,123,255,0.15);
        }
        .month-card.has-data {
            border-color: #28a745;
            background: linear-gradient(135deg, #f8fff8 0%, #e8f5e8 100%);
        }
        .month-card.no-data {
            border-color: #ffc107;
            background: linear-gradient(135deg, #fffdf5 0%, #fff3cd 100%);
        }
    </style>
</head>
<body class="p-4">
    
    <!-- Debug Info (No Print) -->
    <div class="no-print mb-3">
        <div class="alert alert-info border-0 small">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <strong>Debug Info:</strong> 
                    Mode: <%= isCompare ? 'Perbandingan' : 'Normal' %> | 
                    Periode: <%= start_date %> s/d <%= end_date %> | 
                    Posts: <%= totalPostingan %> | 
                    <% if (isCompare) { %>Bulan: <%= monthlyData.length %><% } %>
                </div>
                <div class="d-flex gap-2">
                    <a href="/reports/print" class="btn btn-sm btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Kembali
                    </a>
                    <button class="btn btn-sm btn-primary" onclick="window.print()">
                        <i class="bi bi-printer me-1"></i>Print
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <% if (isCompare && monthlyData && monthlyData.length > 0) { %>
        <!-- COMPARISON MODE -->
        <div class="text-center mb-4">
            <h2 class="fw-bold">üìä Laporan Perbandingan Insight</h2>
            <div class="text-muted">
                <strong><%= monthlyData.length %> Bulan Terakhir</strong> ‚Ä¢ 
                <%= start_date %> s/d <%= end_date %> ‚Ä¢ 
                Total <strong><%= totalPostingan %></strong> postingan
            </div>
        </div>

        <!-- Monthly Cards Overview -->
        <div class="row mb-5">
            <% monthlyData.forEach((month, index) => { %>
                <div class="col-lg-<%= Math.floor(12 / Math.min(monthlyData.length, 4)) %> col-md-6 mb-4">
                    <div class="card month-card <%= month.hasPosts ? 'has-data' : 'no-data' %> h-100">
                        <div class="card-header text-center <%= month.hasPosts ? 'bg-success text-white' : 'bg-warning text-dark' %>">
                            <h5 class="mb-1"><%= month.monthName %></h5>
                            <small>
                                <%= month.postCount %> postingan
                                <% if (month.followerCount !== null) { %>
                                    ‚Ä¢ <%= month.followerCount.toLocaleString() %> follower
                                <% } %>
                            </small>
                        </div>
                        <div class="card-body text-center">
                            <% if (month.hasPosts) { %>
                                <div class="row g-2">
                                    <% if (Array.isArray(insights) ? insights.includes('view') : true) { %>
                                        <div class="col-6">
                                            <div class="text-muted small">View</div>
                                            <div class="fw-bold text-primary"><%= month.totals.view.toLocaleString() %></div>
                                        </div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('like') : true) { %>
                                        <div class="col-6">
                                            <div class="text-muted small">Like</div>
                                            <div class="fw-bold text-danger"><%= month.totals.like.toLocaleString() %></div>
                                        </div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('comment') : true) { %>
                                        <div class="col-6">
                                            <div class="text-muted small">Comment</div>
                                            <div class="fw-bold text-success"><%= month.totals.comment.toLocaleString() %></div>
                                        </div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('share') : true) { %>
                                        <div class="col-6">
                                            <div class="text-muted small">Share</div>
                                            <div class="fw-bold text-info"><%= month.totals.share.toLocaleString() %></div>
                                        </div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('save') : true) { %>
                                        <div class="col-6">
                                            <div class="text-muted small">Save</div>
                                            <div class="fw-bold text-warning"><%= month.totals.save.toLocaleString() %></div>
                                        </div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('er') : true) { %>
                                        <div class="col-12 mt-2">
                                            <div class="text-muted small">ER Rata-rata</div>
                                            <div class="h5 mb-0 text-dark">
                                                <span class="badge bg-primary fs-6"><%= month.averageER.toFixed(2) %>%</span>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <div class="text-muted">
                                    <i class="bi bi-calendar-x fs-3 d-block mb-2"></i>
                                    <small>Tidak ada postingan<br>di bulan ini</small>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Detail Posts per Month -->
        <% monthlyData.forEach((month, monthIndex) => { %>
            <% if (month.hasPosts) { %>
                <div class="mb-5">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h4 class="mb-0">
                            <span class="badge bg-success me-2"><%= monthIndex + 1 %></span>
                            <%= month.monthName %>
                        </h4>
                        <span class="badge text-bg-light border">
                            <%= month.postCount %> postingan ‚Ä¢ 
                            ER: <%= month.averageER.toFixed(2) %>%
                        </span>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th width="50" class="text-center">No</th>
                                    <th>Detail Post</th>
                                    <th width="120">Tanggal</th>
                                    <th width="200">Insight</th>
                                    <th width="100">Status</th>
                                    <% if (includeThumbs) { %>
                                        <th width="120" class="text-center">Konten</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody>
                            <% month.reports.forEach((r, i)=> { %>
                                <tr>
                                    <td class="text-center fw-bold"><%= i+1 %></td>
                                    <td>
                                        <div class="fw-semibold mb-1" style="font-size: 0.9rem;"><%= r.judul %></div>
                                        <div style="font-size: 0.75rem;">
                                            <a href="<%= r.post_url %>" class="text-decoration-none text-muted" target="_blank">
                                                <i class="bi bi-link-45deg me-1"></i>
                                                <%= r.post_url.length > 50 ? r.post_url.substring(0, 50) + '...' : r.post_url %>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div style="font-size: 0.8rem;">
                                            <%= typeof formatDate === 'function' ? formatDate(r.post_date) : new Date(r.post_date).toLocaleDateString('id-ID') %>
                                        </div>
                                    </td>
                                    <td>
                                        <%
                                          const like = r.like_count || 0;
                                          const comment = r.comment_count || 0;
                                          const share = r.share_count || 0;
                                          const save = r.save_count || 0;
                                          const view = r.view_count || 1;
                                          const er = ((like + comment + share + save) / view * 100);
                                        %>
                                        <div style="font-size: 0.8rem; line-height: 1.3;">
                                            <% if (Array.isArray(insights) ? insights.includes('view') : true) { %>
                                              <div><strong>View:</strong> <%= view.toLocaleString() %></div>
                                            <% } %>
                                            <% if (Array.isArray(insights) ? insights.includes('like') : true) { %>
                                              <div><strong>Like:</strong> <%= like.toLocaleString() %></div>
                                            <% } %>
                                            <% if (Array.isArray(insights) ? insights.includes('comment') : true) { %>
                                              <div><strong>Comment:</strong> <%= comment.toLocaleString() %></div>
                                            <% } %>
                                            <% if (Array.isArray(insights) ? insights.includes('share') : true) { %>
                                              <div><strong>Share:</strong> <%= share.toLocaleString() %></div>
                                            <% } %>
                                            <% if (Array.isArray(insights) ? insights.includes('save') : true) { %>
                                              <div><strong>Save:</strong> <%= save.toLocaleString() %></div>
                                            <% } %>
                                            <% if (Array.isArray(insights) ? insights.includes('er') : true) { %>
                                              <div class="mt-1">
                                                <span class="badge bg-primary" style="font-size: 0.7rem;">
                                                  ER: <%= er.toFixed(2) %>%
                                                </span>
                                              </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <% if (r.status === 'valid') { %>
                                            <span class="badge bg-success px-2 py-1">
                                                <i class="bi bi-check-circle-fill me-1"></i>Valid
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark px-2 py-1">
                                                <i class="bi bi-clock-fill me-1"></i>Running
                                            </span>
                                        <% } %>
                                    </td>
                                    <% if (includeThumbs) { %>
                                    <td class="text-center">
                                        <% if (r.image_path) { %>
                                            <img src="/<%= r.image_path %>" class="thumb border rounded shadow-sm" alt="Content" />
                                        <% } else { %>
                                            <div class="text-muted small">
                                                <i class="bi bi-image"></i><br>
                                                No Image
                                            </div>
                                        <% } %>
                                    </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } %>
        <% }) %>

    <% } else { %>
        <!-- NORMAL MODE -->
        <div class="text-center mb-4">
            <h2 class="fw-bold">üìã Laporan Periode</h2>
            <div class="text-muted">
                <strong><%= start_date %></strong> sampai <strong><%= end_date %></strong> ‚Ä¢ 
                Total <strong><%= totalPostingan %></strong> postingan
            </div>
        </div>

        <% if (reports && reports.length > 0) { %>
            <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th width="50" class="text-center">No</th>
                    <th>Detail Post</th>
                    <th width="120">Tanggal</th>
                    <th width="200">Insight</th>
                    <th width="100">Status</th>
                    <% if (includeThumbs) { %>
                        <th width="120" class="text-center">Konten</th>
                    <% } %>
                </tr>
            </thead>
                    <tbody>
                    <% reports.forEach((r, i)=> { %>
                        <tr>
                            <td class="text-center fw-bold"><%= i+1 %></td>
                            <td>
                                <div class="fw-semibold mb-1"><%= r.judul %></div>
                                <div class="small">
                                    <a href="<%= r.post_url %>" class="text-decoration-none text-muted" target="_blank">
                                        <i class="bi bi-link-45deg me-1"></i>
                                        <%= r.post_url.length > 50 ? r.post_url.substring(0, 50) + '...' : r.post_url %>
                                    </a>
                                </div>
                            </td>
                            <td class="text-center">
                                <%= typeof formatDate === 'function' ? formatDate(r.post_date) : new Date(r.post_date).toLocaleDateString('id-ID') %>
                            </td>
                            <td>
                                <%
                                  const like = r.like_count || 0;
                                  const comment = r.comment_count || 0;
                                  const share = r.share_count || 0;
                                  const save = r.save_count || 0;
                                  const view = r.view_count || 1;
                                  const er = ((like + comment + share + save) / view * 100);
                                %>
                                <div class="small" style="line-height: 1.4;">
                                    <% if (Array.isArray(insights) ? insights.includes('view') : true) { %>
                                      <div><strong>üëÅÔ∏è View:</strong> <%= view.toLocaleString() %></div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('like') : true) { %>
                                      <div><strong>‚ù§Ô∏è Like:</strong> <%= like.toLocaleString() %></div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('comment') : true) { %>
                                      <div><strong>üí¨ Comment:</strong> <%= comment.toLocaleString() %></div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('share') : true) { %>
                                      <div><strong>üîÑ Share:</strong> <%= share.toLocaleString() %></div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('save') : true) { %>
                                      <div><strong>üîñ Save:</strong> <%= save.toLocaleString() %></div>
                                    <% } %>
                                    <% if (Array.isArray(insights) ? insights.includes('er') : true) { %>
                                      <div class="mt-1">
                                        <span class="badge bg-success">ER: <%= er.toFixed(2) %>%</span>
                                      </div>
                                    <% } %>
                                </div>
                            </td>
                            <td class="text-center">
                                <% if (r.status === 'valid') { %>
                                    <span class="badge bg-success px-2 py-1">
                                        <i class="bi bi-check-circle-fill me-1"></i>Valid
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-warning text-dark px-2 py-1">
                                        <i class="bi bi-clock-fill me-1"></i>Running
                                    </span>
                                <% } %>
                            </td>
                            <% if (includeThumbs) { %>
                            <td class="text-center">
                                <% if (r.image_path) { %>
                                    <img src="/<%= r.image_path %>" class="thumb border rounded shadow-sm" alt="Content" />
                                <% } else { %>
                                    <div class="text-muted small">
                                        <i class="bi bi-image"></i><br>
                                        No Image
                                    </div>
                                <% } %>
                            </td>
                            <% } %>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center">
                <i class="bi bi-exclamation-triangle fs-2 d-block mb-2"></i>
                <h5>Tidak ada data</h5>
                <p class="mb-0">Tidak ditemukan postingan pada rentang tanggal <strong><%= start_date %></strong> sampai <strong><%= end_date %></strong></p>
            </div>
        <% } %>
    <% } %>

    <!-- Summary Statistics -->
    <div class="mt-5">
        <% if (isCompare) { %>
            <h4 class="mb-4">üìä Ringkasan Perbandingan Keseluruhan</h4>
        <% } else { %>
            <h4 class="mb-4">üìä Ringkasan Statistik</h4>
        <% } %>

        <div class="row g-4">
            <!-- Total Insights -->
            <div class="col-lg-6">
                <div class="card summary-card h-100">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-graph-up me-2"></i>
                            Total Insight
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <% if (Array.isArray(insights) ? insights.includes('view') : true) { %>
                                <div class="col-6">
                                    <div class="text-center p-2 border rounded bg-light">
                                        <div class="text-primary fw-bold fs-4"><%= (totals?.view || 0).toLocaleString() %></div>
                                        <div class="small text-muted">üëÅÔ∏è Total View</div>
                                    </div>
                                </div>
                            <% } %>
                            <% if (Array.isArray(insights) ? insights.includes('like') : true) { %>
                                <div class="col-6">
                                    <div class="text-center p-2 border rounded bg-light">
                                        <div class="text-danger fw-bold fs-4"><%= (totals?.like || 0).toLocaleString() %></div>
                                        <div class="small text-muted">‚ù§Ô∏è Total Like</div>
                                    </div>
                                </div>
                            <% } %>
                            <% if (Array.isArray(insights) ? insights.includes('comment') : true) { %>
                                <div class="col-6">
                                    <div class="text-center p-2 border rounded bg-light">
                                        <div class="text-success fw-bold fs-4"><%= (totals?.comment || 0).toLocaleString() %></div>
                                        <div class="small text-muted">üí¨ Total Comment</div>
                                    </div>
                                </div>
                            <% } %>
                            <% if (Array.isArray(insights) ? insights.includes('share') : true) { %>
                                <div class="col-6">
                                    <div class="text-center p-2 border rounded bg-light">
                                        <div class="text-info fw-bold fs-4"><%= (totals?.share || 0).toLocaleString() %></div>
                                        <div class="small text-muted">üîÑ Total Share</div>
                                    </div>
                                </div>
                            <% } %>
                            <% if (Array.isArray(insights) ? insights.includes('save') : true) { %>
                                <div class="col-6">
                                    <div class="text-center p-2 border rounded bg-light">
                                        <div class="text-warning fw-bold fs-4"><%= (totals?.save || 0).toLocaleString() %></div>
                                        <div class="small text-muted">üîñ Total Save</div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        
                        <hr class="my-3">
                        
                        <div class="row">
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="display-6 fw-bold text-dark"><%= (typeof totalPostingan === 'number' ? totalPostingan : (reports?.length || 0)) %></div>
                                    <div class="small text-muted">Total Postingan</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="display-6 fw-bold text-primary"><%= (averageER || 0).toFixed(2) %>%</div>
                                    <div class="small text-muted">Rata-rata ER</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Follower Change -->
            <div class="col-lg-6">
                <div class="card summary-card h-100">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-people me-2"></i>
                            Perubahan Follower
                        </h6>
                    </div>
                    <div class="card-body">
                        <%
                          const hasFollower = followerChange && followerChange.start !== null && followerChange.end !== null;
                          const diff = hasFollower ? followerChange.diff : 0;
                          const pct = hasFollower ? followerChange.pct : null;
                          const trendUp = hasFollower ? diff >= 0 : null;
                          const trendClass = trendUp ? 'text-success' : 'text-danger';
                          const badgeClass = trendUp ? 'bg-success' : 'bg-danger';
                        %>

                        <% if (hasFollower) { %>
                          <div class="text-center mb-3">
                            <div class="display-5 fw-bold <%= trendClass %>">
                              <%= followerChange.end.toLocaleString() %>
                            </div>
                            <div class="small text-muted mb-2">Follower Akhir</div>
                            <span class="badge <%= badgeClass %> px-3 py-2">
                              <%= (diff >= 0 ? '+' : '') + diff.toLocaleString() %>
                              <% if (pct !== null) { %>
                                (<%= (pct >= 0 ? '+' : '') + pct.toFixed(2) %>%)
                              <% } %>
                            </span>
                          </div>

                          <% const progressWidth = Math.min(Math.abs(pct || 0), 100); %>
                          <div class="progress mb-3" style="height: 12px;">
                            <div class="progress-bar <%= trendUp ? 'bg-success' : 'bg-danger' %>" 
                                 role="progressbar" 
                                 data-width="<%= progressWidth %>"
                                 style="width: 0"
                                 aria-valuenow="<%= Math.abs(pct || 0) %>" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                            </div>
                          </div>
                          <script>
                            document.querySelectorAll('.progress-bar[data-width]').forEach(bar => {
                              bar.style.width = bar.dataset.width + '%';
                            });
                          </script>

                          <div class="row text-center">
                            <div class="col-6">
                              <div class="border rounded p-2 bg-light">
                                <div class="fw-semibold"><%= followerChange.start.toLocaleString() %></div>
                                <div class="small text-muted">Awal</div>
                              </div>
                            </div>
                            <div class="col-6">
                              <div class="border rounded p-2 bg-light">
                                <div class="fw-semibold <%= trendClass %>"><%= followerChange.end.toLocaleString() %></div>
                                <div class="small text-muted">Akhir</div>
                              </div>
                            </div>
                          </div>
                        <% } else { %>
                          <div class="text-center py-4">
                            <i class="bi bi-exclamation-circle text-warning fs-1 mb-3"></i>
                            <div class="text-muted">
                              <strong>Data Follower Tidak Tersedia</strong>
                              <div class="small mt-1">
                                Tidak ada data follower yang memadai<br>
                                untuk periode ini
                              </div>
                            </div>
                          </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Metric Changes (Only show if there are changes to display) -->
        <% if (metricChange && (isCompare || Object.values(metricChange).some(m => m && m.start !== null))) { %>
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-graph-up-arrow me-2"></i>
                                <% if (isCompare) { %>
                                    Perbandingan Perubahan Insight Antar Bulan
                                <% } else { %>
                                    Perubahan Insight (Awal ‚Üí Akhir)
                                <% } %>
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <% const items = [
                                    { key: 'view', label: 'View', icon: 'üëÅÔ∏è', color: 'primary' },
                                    { key: 'like', label: 'Like', icon: '‚ù§Ô∏è', color: 'danger' },
                                    { key: 'comment', label: 'Comment', icon: 'üí¨', color: 'success' },
                                    { key: 'share', label: 'Share', icon: 'üîÑ', color: 'info' },
                                    { key: 'save', label: 'Save', icon: 'üîñ', color: 'warning' }
                                ]; %>
                                <% items.forEach(it => {
                                     const show = Array.isArray(insights) ? insights.includes(it.key) : true;
                                     const t = metricChange && metricChange[it.key];
                                %>
                                  <% if (show && t && t.start !== null) { %>
                                    <div class="col-lg-4 col-md-6">
                                      <div class="border rounded p-3 h-100 bg-light">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                          <div class="fw-semibold">
                                            <%= it.icon %> <%= it.label %>
                                          </div>
                                          <% const isUp = t.diff !== null ? t.diff >= 0 : null; %>
                                          <span class="badge <%= isUp ? 'bg-success' : 'bg-danger' %> rounded-pill">
                                            <%= (isUp ? '+' : '') + (t.diff !== null ? t.diff.toLocaleString() : '0') %>
                                          </span>
                                        </div>
                                        
                                        <div class="small text-muted mb-2">
                                          <div>Akhir: <strong><%= (t.end !== null ? t.end.toLocaleString() : '0') %></strong></div>
                                          <div>Awal: <strong><%= (t.start !== null ? t.start.toLocaleString() : '0') %></strong></div>
                                        </div>
                                        
                                        <div class="progress mb-2" style="height: 8px;">
                                          <% const pctAbs = Math.min(Math.abs((t.pct !== null ? t.pct : 0)), 100); %>
                                          <div class="progress-bar <%= isUp ? 'bg-success' : 'bg-danger' %>" 
                                               role="progressbar" 
                                               data-width="<%= pctAbs %>"
                                               style="width: 0"
                                               aria-valuenow="<%= pctAbs %>" 
                                               aria-valuemin="0" 
                                               aria-valuemax="100">
                                          </div>
                                        </div>
                                        
                                        <div class="text-end">
                                          <span class="badge text-bg-light border <%= isUp ? 'text-success' : 'text-danger' %>">
                                            <%= (t.pct !== null ? (t.pct >= 0 ? '+' : '') + t.pct.toFixed(2) + '%' : '-') %>
                                          </span>
                                        </div>
                                      </div>
                                    </div>
                                  <% } %>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Period Info -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center py-3">
                        <div class="text-muted small">
                            <strong>Periode Report:</strong> 
                            <%= start_date %> sampai <%= end_date %>
                            <% if (isCompare) { %>
                                ‚Ä¢ Mode: Perbandingan <%= monthlyData.length %> Bulan
                            <% } else { %>
                                ‚Ä¢ Mode: Normal
                            <% } %>
                            ‚Ä¢ Generated: <%= new Date().toLocaleDateString('id-ID', { 
                                day: '2-digit', 
                                month: 'long', 
                                year: 'numeric',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom spacer for printing -->
    <div style="height: 50px;"></div>
</body>
</html>
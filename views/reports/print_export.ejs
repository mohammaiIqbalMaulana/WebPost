                                            <span class="badge bg-success">ER: <%= er.toFixed(2) %>%</span>
                                          </div>
                                        <% } %>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <% if (r.status === 'valid') { %>
                                        <span class="badge bg-success px-2 py-1">
                                            <i class="bi bi-check-circle-fill me-1"></i>Valid
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-warning text-dark px-2 py-1">
                                            <i class="bi bi-clock-fill me-1"></i>Running
                                        </span>
                                    <% } %>
                                </td>
                                <% if (includeThumbs) { %>
                                <td class="text-center">
                                    <% if (r.image_path) { %>
                                        <img src="/<%= r.image_path %>" class="thumb border rounded shadow-sm" alt="Content" />
                                    <% } else { %>
                                        <div class="text-muted small">
                                            <i class="bi bi-image"></i><br>
                                            No Image
                                        </div>
                                    <% } %>
                                </td>
                                <% } %>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-warning text-center">
                    <i class="bi bi-exclamation-triangle fs-2 d-block mb-2"></i>
                    <h5>Tidak ada data</h5>
                    <p class="mb-0">Tidak ditemukan postingan pada rentang tanggal <strong><%= start_date %></strong> sampai <strong><%= end_date %></strong></p>
                </div>
            <% } %>
        </div>
    <% } %>

    <!-- Period Info -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 bg-light">
                <div class="card-body text-center py-3">
                    <div class="text-muted small">
                        <strong>Periode Report:</strong> 
                        <%= start_date %> sampai <%= end_date %>
                        <% if (isCompare) { %>
                            ‚Ä¢ Mode: Perbandingan <%= monthlyData.length %> Bulan
                        <% } else { %>
                            ‚Ä¢ Mode: Normal
                        <% } %>
                        ‚Ä¢ Generated: <%= new Date().toLocaleDateString('id-ID', { 
                            day: '2-digit', 
                            month: 'long', 
                            year: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom spacer for printing -->
    <div style="height: 50px;"></div>

    <!-- Chart Initialization Script -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle posts collapse button color change
        const postsCollapse = document.getElementById('postsCollapse');
        const toggleButton = document.querySelector('[data-bs-target="#postsCollapse"]');

        if (postsCollapse && toggleButton) {
            postsCollapse.addEventListener('show.bs.collapse', function () {
                toggleButton.classList.remove('btn-warning', 'btn-danger');
                toggleButton.classList.add('btn-success');
            });

            postsCollapse.addEventListener('hide.bs.collapse', function () {
                toggleButton.classList.remove('btn-warning', 'btn-success');
                toggleButton.classList.add('btn-danger');
            });
        }
        // Chart configuration untuk PDF/Print friendly
        Chart.defaults.font.size = 11;
        Chart.defaults.responsive = true;
        Chart.defaults.maintainAspectRatio = false;

        const printMode = window.matchMedia('print');

        // Chart initialization
        const rawChartData = '<%- chartData || "null" %>';
        const isCompareMode = '<%- isCompare %>' === 'true';

        // Unified chart initialization for both modes
        const chartDataArray = JSON.parse(rawChartData || "[]");

        chartDataArray.forEach(chartItem => {
            const canvasId = `chart-${chartItem.insight}`;
            const canvas = document.getElementById(canvasId);
            if (canvas) {
                const ctx = canvas.getContext('2d');

                const config = {
                    type: 'line',
                    data: chartItem.data,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'bottom',
                                labels: {
                                    boxWidth: 12,
                                    padding: 15,
                                    font: { size: 10 }
                                }
                            },
                            tooltip: {
                                mode: 'index',
                                intersect: false,
                                titleFont: { size: 11 },
                                bodyFont: { size: 10 }
                            }
                        },
                        scales: {
                            x: {
                                display: true,
                                grid: { display: false },
                                ticks: {
                                    font: { size: 9 },
                                    maxRotation: 45
                                }
                            },
                            y: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                grid: { color: '#e9ecef' },
                                ticks: {
                                    font: { size: 9 },
                                    callback: function(value) {
                                        if (chartItem.insight === 'er') {
                                            return value.toFixed(1) + '%';
                                        } else if (chartItem.insight === 'post' || chartItem.insight === 'follower') {
                                            return value.toLocaleString();
                                        }
                                        return value >= 1000 ? (value/1000).toFixed(1) + 'k' : value;
                                    }
                                }
                            }
                        },
                        elements: {
                            point: { radius: 3, hoverRadius: 5 },
                            line: { borderWidth: isCompareMode ? 3 : 2 }
                        },
                        // Print-specific settings
                        animation: {
                            onComplete: function() {
                                if (printMode.matches) {
                                    this.options.animation = false;
                                }
                            }
                        }
                    }
                };

                // For ER chart, add y1 axis
                if (chartItem.insight === 'er') {
                    config.options.scales.y1 = {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        grid: { drawOnChartArea: false },
                        ticks: {
                            font: { size: 9 },
                            callback: function(value) {
                                return value.toFixed(1) + '%';
                            }
                        }
                    };
                    config.data.datasets[0].yAxisID = 'y1';
                }

                new Chart(ctx, config);
            }
        });

        // Handle separate follower chart for comparison mode if data exists
        if (isCompareMode) {
            const rawFollowerChartData = '<%- followerChartData || "null" %>';
            if (rawFollowerChartData !== 'null') {
                const followerChartData = JSON.parse(rawFollowerChartData);
                const followerCanvas = document.getElementById('chart-follower');
                if (followerCanvas && followerChartData && !chartDataArray.some(item => item.insight === 'follower')) {
                    const ctx = followerCanvas.getContext('2d');
                    const config = {
                        type: 'line',
                        data: followerChartData,
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'bottom',
                                    labels: {
                                        boxWidth: 12,
                                        padding: 15,
                                        font: { size: 10 }
                                    }
                                },
                                tooltip: {
                                    mode: 'index',
                                    intersect: false,
                                    titleFont: { size: 11 },
                                    bodyFont: { size: 10 }
                                }
                            },
                            scales: {
                                x: {
                                    display: true,
                                    grid: { display: false },
                                    ticks: {
                                        font: { size: 9 },
                                        maxRotation: 45
                                    }
                                },
                                y: {
                                    type: 'linear',
                                    display: true,
                                    position: 'left',
                                    grid: { color: '#e9ecef' },
                                    ticks: {
                                        font: { size: 9 },
                                        callback: function(value) {
                                            return value.toLocaleString();
                                        }
                                    }
                                }
                            },
                            elements: {
                                point: { radius: 3, hoverRadius: 5 },
                                line: { borderWidth: 3 }
                            },
                            animation: {
                                onComplete: function() {
                                    if (printMode.matches) {
                                        this.options.animation = false;
                                    }
                                }
                            }
                        }
                    };
                    new Chart(ctx, config);
                }
            }
        }
    });
    </script>
</body>
</html>